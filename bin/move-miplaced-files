#! /bin/bash
set -e

move() {
  from="$1"
  to="$2"
  for dir in $(find -type d -path "**/src/main"); do
    if [ -d "$dir/$from" ]; then
      for path in $(cd "$dir/$from" && find -type f -name "*.$to"); do
        fromFile="$dir/$from/$path"
        toFile="$dir/$to/$path"
        mkdir -p $(dirname "$toFile")
        mv -v "$fromFile" "$toFile"
      done
    fi
  done
}

move scala java
move java scala
